extends ../layouts/default
include ../helpers/_mixins

block variables
  - const title = "Контакты"

block content
  section.section.s-contacts
    .l-default
      h1.page__title.a-font_h1= title
      .s-contacts__wrapper
        .s-contacts__info
          .s-contacts__data
            .s-contacts__item
              .s-contacts__item-icon
                +svgColor("phone")
              .s-contacts__item-text
                a(href="tel:+79851204158") +7 (985) 120-41-58 (моб., whatsapp)
                a(href="tel:+74957446386") +7 (495) 744-63-86
            .s-contacts__item
              .s-contacts__item-icon
                +svgColor("email")
              .s-contacts__item-text
                a(href="mailto:bespoke@khalikovtailors.ru") bespoke@khalikovtailors.ru
            .s-contacts__item
              .s-contacts__item-icon
                +svgColor("location")
              .s-contacts__item-text Москва, Чистопрудный бульвар, д. 15, стр. 2.
            .s-contacts__item
              .s-contacts__item-icon
                +svgColor("clock")
              .s-contacts__item-text 10:00 до 20:00 понедельник-суббота
          #wrapMap.s-contacts__map
            iframe(src='https://yandex.ru/map-widget/v1/?um=constructor%3A2865f51be7607ce1f205ad7116713dad0bab1556b36deeb9e5a1fdd77b9b7d3d&source=constructor', width='100%', height='400',  style="pointer-events: none;", frameborder='0')

        .s-contacts__form
          +form('Связаться с нами', 'Отправить заявку', 'full')
block scripts
  script(defer src="./js/vendor.js")
  script(defer src="./js/main.js")